<h1> Edit Post </h1>

<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :author %>
  <%= f.text_field :author %>

  <%= f.label :body %>
  <%= f.text_field :body %>

  <%= f.label :contactinfo %>
  <%= f.text_field :contactinfo %>

  <%= f.submit %>
<% end %>